/*To rotate bits by left*/

#include <stdio.h>

int main()
{
    int num,rotate,num1;
    printf("Enter the number:\n");
    scanf("%d",&num);
    printf("Number of rotations to left:\n");
    scanf("%d",&rotate);
    int bits=8*sizeof(num);
    int dropped_MSB=(num>>bits-1)&1;// to get the MSB value

    int ro=rotate;

    while(ro)
    {
        num1=(num<<1)|dropped_MSB;//to set the LSB with the MSB value
        ro--;
    }
    printf("MSB is %d\n",dropped_MSB);
    printf("The number %d after %d rotations is %d \n",num,rotate,num1);

    return 0;
}
