#include <stdio.h>
#include<pthread.h>
#include<unistd.h>
void * even(void *ptr)
{
    for(int i=1;i<=100;i++)
    {
        if(i%2==0)
            printf("even numbers are printed by using thread 1:%d\n",i);
            sleep(1);
    }
}
void *odd(void *ptr)
{
    for(int i=1;i<100;i++)
    {
        if(i%2!=0)
            printf("odd numbers are printed by using thread 2:%d\n",i);
            sleep(1);
    }
}
int main(void)
{
 pthread_t tid[2];
 pthread_create(&tid[0],NULL,even,NULL);
 sleep(1);
 pthread_create(&tid[1],NULL,odd,NULL);
 pthread_join(tid[0],NULL);
 pthread_join(tid[1],NULL);
}

output:

