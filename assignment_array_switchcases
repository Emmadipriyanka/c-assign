#include <stdio.h>
int sub(int *arr)
{
    return arr[0]-arr[1];
}
int sum(int *p)
{
    return p[0]+p[1];
}
int check(int a)
{
    a%2==0?printf("result is even\n"):printf("result is odd\n");
}
void display(int a)
{
    printf("result is:%d\n",a);
}
int main()
{
    int arr[2],choice,e,f;
    printf("enter elements:");
    for(int i=0;i<2;i++)
        scanf("%d",&arr[i]);
    printf("1:sub  2:sum\n");
    do{
    printf("enter choice:");
        scanf("%d",&choice);
        switch(choice){
            case 1:{
                e=sub(arr);
                display(e);
                check(e);
                break;
            }
            case 2:{
                f=sum(arr);
                display(f);
                check(f);
                break;
            }
            case 3:
            {
                printf("exit point");
                break;
            }
            default:{
                    printf("enter a valid choice:");
        }
        }
    }
    while(choice!=3);
    return 0;
}



output:

enter elements:3 4
1:sub  2:sum
enter choice:2
result is:7
result is odd
enter choice:1
result is:-1
result is odd
enter choice:6
enter a valid choice:enter choice:3
exit point
