#include<stdio.h>
typedef struct name{
    int x:3;
    int y:2;
    int z:1;
}priya;
int main()
{
    priya p={7,3,1};
    printf("x:%d \n",p.x);//its displays 2's complement because msb is 1 , compiler assumes it as negative number 
    printf("y:%d \n",p.y);// in all conditions and it also a signed integer 
    printf("z:%d",p.z);
}


output:

x:-1
y:-1 
z:-1
