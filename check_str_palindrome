
#include <stdio.h>
#include<string.h>


int main()
{
    char str1[30],str2[30];
    int l1;
    int i;
    int c=0;
    
    printf("Enter string1:\n");
    scanf("%[^\n]s",str1);
    
    l1=strlen(str1);
    for(i=0;str1[i]!='\0';i++)
    {
       str2[i]=str1[l1-1];
       l1=l1-1;
    }
    l1=strlen(str1);
    int l2=strlen(str2);
    if(l1==l2)
    {
        for(int j=0;str1[j]!='\0';j++)
        {
            if(str1[j]==str2[j])
            c++;
        }
        if(c==l1)
        printf("String is a Palindrome");
        else
        printf("Not a Palindrome");
    }
   
   
    return 0;
}
