#include<stdio.h>
int main()
{
    int a=10,arr[32],i=0;
    while(a>0)
    {
        if(a&1)
            arr[i]=1;
        else
            arr[i]=0;
        i++;
        a=a>>1;
        
    }
    
    
    // for(int i=0;i<32;i++)
    // {
    //     if(a&(1<<i))
    //         arr[i]=1;
    //     else
    //         arr[i]=0;
    // }
    printf("number in binary:");
    for(int i=3;i>=0;i--){
        printf("%d",arr[i]);
    }
}
