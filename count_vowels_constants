
#include <stdio.h>
#include<string.h>


int main()
{
    char str[30];
    int count_vowels=0,count_cons=0;
    int i;
    
    printf("Enter string1:\n");
    scanf("%[^\n]s",str);
    
    for(i=0;str[i]!='\0';i++)
    {
        if(str[i]=='a'||str[i]=='e'||str[i]=='i'||str[i]=='o'||str[i]=='u')
            count_vowels++;
        
        else if(str[i]=='A'||str[i]=='E'||str[i]=='I'||str[i]=='O'||str[i]=='U')
            count_vowels;
        
        else
            count_cons++;
    }
    
   printf("No. of vowels: %d \nNo. of consonants:%d\n",count_vowels,count_cons);
   
   
    return 0;
}
