
#include <stdio.h>
#include<string.h>


int main()
{
    char str[30];
    int l1=strlen(str);
    int count_spaces=0,words=0;
    int i;
    
    printf("Enter string1:\n");
    scanf("%[^\n]s",str);
    
    for(i=0;str[i]!='\0';i++)
    {
       if(str[i]==32)
       count_spaces++;
    }
    words=count_spaces+1;
    if(str[l1-1]==32)
        words=words-1;
    printf("No. of words: %d",words);
   
   
    return 0;
}
