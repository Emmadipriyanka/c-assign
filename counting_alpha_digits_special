
#include <stdio.h>
#include<string.h>


int main()
{
    char str[30];
    int count_alpha=0,count_nos=0,count_special=0;
    int i;
    
    printf("Enter string1:\n");
    scanf("%[^\n]s",str);
    
    for(i=0;str[i]!='\0';i++)
    {
        if((str[i] >= 'a' && str[i] <= 'z') || (str[i] >= 'A' && str[i] <= 'Z'))
            count_alpha++;
        
        else if(str[i] >= '0' && str[i] <= '9')
            count_nos++;
        
        else
            count_special++;
    }
    
   printf("No. of Alphabets: %d \nNo. of digits:%d\nNo. of Special characters:%d\n",count_alpha,count_nos,count_special);
   
   
    return 0;
}
