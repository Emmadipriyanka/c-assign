#include<stdio.h>
int main()
{
    int a,arr[10],j,i=0,count_0=0,count_1=0;
    printf("enter a number:");
    scanf("%d",&a);
    while(a>0)
    {
        arr[i]=a%2;
        a=a/2;
        i++;
    }
    printf("number in a binary format is :");
    for(int j=i-1;j>=0;j--)
    {
        printf("%d",arr[j]);
    }
    
    for(int j=i-1;j>=0;j--)
    {
        if(arr[j]%2==0)
            count_0++;
        else
            count_1++;
    }
    printf("\nno.of zeros in a number is : %d",count_0);
    printf("\nno.of ones in a number is : %d",count_1);
}

output:

enter a number:17
number in a binary format is :10001
no.of zeros in a number is : 3
no.of ones in a number is : 2
