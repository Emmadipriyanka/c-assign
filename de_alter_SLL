#include<stdio.h>
#include<stdlib.h>

struct node{
        int data;
        struct node *next;
}*head;

void create(){
        struct node *newnode,*temp;
        head=NULL;
        int choice;
        while(choice){
                newnode=malloc(sizeof(struct node));
                printf("enter data:");
                scanf("%d",&newnode->data);
                newnode->next=NULL;
                if(head==NULL)
                        temp=head=newnode;
                else{
                        temp->next=newnode;
                        temp=newnode;
                }
                printf("1->continue  0->exit:");
                scanf("%d",&choice);
        }
}

void del_alt()
{
    struct node *temp,*prevnode;
    prevnode=temp=head;
    temp=temp->next;
    while(prevnode!=NULL && temp!=NULL)
    {
        prevnode->next=temp->next;
        free(temp);
        prevnode=prevnode->next;
        if(prevnode!=NULL)
            temp=prevnode->next;
    }
}
void display()
{
        struct node *temp;
        temp=head;
        if(temp==NULL)
                printf("empty list");
        while(temp!=NULL)
        {
                printf("%d  ",temp->data);
	        	temp=temp->next;
        }
}

int main()
{
        create();
        printf("\nlinked list elements are:");
        display();
        del_alt();
        printf("\ndeleting alternative nodes in linked list is:");
        display();
}

output:

enter data:1
1->continue  0->exit:1
enter data:4
1->continue  0->exit:1
enter data:9

1->continue  0->exit:1
enter data:5
1->continue  0->exit:1
enter data:6
1->continue  0->exit:0
linked list elements are:1  4  9  5  6  
deleting alternative nodes in linked list is:1  9  6  
