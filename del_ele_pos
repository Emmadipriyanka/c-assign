#include <stdio.h>
int main()
{
    int n;
    printf("enter array size:");
    scanf("%d",&n);
    int arr[n];
    int pos;
    printf("Enter elements into array:\n");
    for(int i=0;i<n;i++)
        scanf("%d",&arr[i]);
    printf("Enter the position:");
    scanf("%d",&pos);

    for(int i=pos-1;i<n;i++)
    {
        arr[i]=arr[i+1];
    }
    printf("array elements:");
    for(int i=0;i<n;i++)
    printf("%d\t",arr[i]);

    return 0;
}

output:

enter array size:5
Enter elements into array:
1
2
3
4
5
Enter the position:3
array elements:1        2       4       5       0
