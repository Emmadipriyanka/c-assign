#include<stdio.h>
#include<stdlib.h>
struct node{
    int data;
    struct node *next;
}*head;
int count;
void create()
{
    struct node *temp,*newnode;
    head=NULL;
    int choice;
    while(choice)
    {
        newnode=(struct node*)malloc(sizeof(struct node));
        printf("enter data :");
        scanf("%d",&newnode->data);
        newnode->next=NULL;
        if(head==NULL)
            temp=head=newnode;
        else
        {
            temp->next=newnode;
            temp=newnode;
        }
        count++;
        printf("do you want to continue:1->yes, 0->no:");
        scanf("%d",&choice);
    }
}
void display()
{
    struct node *temp;
    if(head==NULL)
        printf("empty list");
    else
    {
        temp=head;
        while(temp!=NULL)
        {
            printf("%d\t",temp->data);
            temp=temp->next;
        }
    }
    printf("\nno.of nodes %d\n",count);
}
void del_beg()
{
    struct node *temp;
    if(head==NULL)
        printf("\nempty list\n");
    else{
    temp=head;
    head=temp->next;
    count--;
    }
}
void del_end()
{
    struct node *temp,*prevnode;
    temp=head;
    while(temp->next!=NULL){
        prevnode=temp;
        temp=temp->next;
    }
    if(temp==head)
        head=NULL;
    else
        prevnode->next=NULL;
    count--;
}
void del_pos()
{
    struct node *temp,*nextnode;
    int pos;
    int i=1;
    printf("enter position:");
    scanf("%d",&pos);
    if(pos>count)
        printf("invalid position\n");
    else
    {
        temp=head;
        while(i<pos-1)
        {
            temp=temp->next;
            i++;
        }
        nextnode=temp->next;
        temp->next=nextnode->next;
        count--;
    }
}
int main()
{
    int a;
    printf("list operations are:\n");
    printf("1:create\n2:display\n3.del_beg\n4.del_end\n5.del_pos\n6.exit\n");
    do{
        printf("enter your choice:");
        scanf("%d",&a);
        switch(a)
        {
            case 1:create();
                    break;
            case 2:display();
                    break;
            case 3:
                    del_beg();
                    break;
            case 4:
                    del_end();
                    break;
            case 5:
                    del_pos();
                    break;
            case 6:
                    printf("exit point");
                    break;
            
            default:printf("enter a value correctly");
        }
    }
    while(a!=6);
}


output:

