#include<stdio.h>
int main()
{
    int arr[]={1,2,3,4,5};
    int pos=2;
    for(int i=pos;i<5;i++)
        arr[i]=arr[i+1];
    for(int i=0;i<5-1;i++)
        printf("%d ",arr[i]);
}



#include<stdio.h>
void fun1(int *ptr,int *p)
{
    for(int i=*p;i<5;i++)
        *(ptr+i)=*(ptr+i+1);
    for(int i=0;i<5-1;i++)
        printf("%d ",*(ptr+i));
}
int main()
{
    int arr[]={1,2,3,4,5};
    int pos=2;
    void (*fun) (int *,int *)=fun1;
    fun(arr,&pos);
}
