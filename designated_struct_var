#include<stdio.h>
struct stu//global declaration of structure definition
{
    int ro_no;
    char name[20];
    float per;
};//student; structure variable
int main()
{
    struct stu student={.name="priya",.per=97.8,.ro_no=7};//declaring a structure variable and designated initialization structure values , order is not imp
    printf("ro_no=%d \nname=%s \nper=%.2f \n",student.ro_no,student.name,student.per);//accessing structure elements by using dot operator
    printf("size of student :%ld",sizeof(student));//print the size of structure student
}

output:

ro_no=7 
name=priya 
per=97.80 
size of student :28
