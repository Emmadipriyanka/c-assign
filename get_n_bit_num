#include <stdio.h>

int main()
{
	int num;
	int n;
	printf("Enter a number: ");
	scanf("%d",&num);
	printf("enter bit to check:");
	scanf("%d",&n);
	//checking bit status
	if((num>>n) & 1)
		printf("%d bit in %d is 1 ",n,num);
	else
		printf("%d bit in %d is 0",n,num);
	return 0;	
}

output:

Enter a number: 12
enter bit to check:2
2 bit in 12 is 1 
