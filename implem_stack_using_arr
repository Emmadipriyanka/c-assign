method : 1

#include<stdio.h>
#define len 4
int sta_arr[len];
int top=-1;//empty stack
void push(int data)
{
    if(top==(len-1))
        printf("stack overflow");
    top=top+1;
    sta_arr[top]=data;
    printf("element %d is inserted at  index %d",data,top);
    printf("\n");
}
int pop()
{
    if(top== -1)
        printf("underflow");
    int value;
    value=sta_arr[top];
    top=top-1;
    return value;
}
void top_ele()
{
    int i;
    if(top== -1)
        printf("underflow");
    i=sta_arr[top];
    printf("top element in stack is %d\n",i);
}
void display()
{
    int i;
    if(top== -1)
        printf("underflow");
    printf("elements in stack : ");
    for(i=top;i>=0;i--)
        printf("%d\t",sta_arr[i]);
}
int main()
{
    push(1);
    push(2);
    push(3);
    push(4);
    top_ele();
    int data;
    data=pop();
    printf("element %d is deleted \n",data);
    data=pop();
    printf("element %d is deleted\n",data);
    display();
}


output:

element 1 is inserted at  index 0
element 2 is inserted at  index 1
element 3 is inserted at  index 2
element 4 is inserted at  index 3
top element in stack is 4
element 4 is deleted 
element 3 is deleted
elements in stack : 2   1


method  :02


#include <stdio.h>
#define N 5
int stack[N];
int top=-1;//represents empty stack
void push()
{
    int x;
    printf("enter the data");
    
    scanf("%d",&x);
   
    if(top==N-1)//to check stack is empty or not
    {
        printf("overflow");
    }
    else//if stack is empty
    {
        top++;
        stack[top]=x;
    }
}
void pop()
{
    int item;
    if(top==-1)
    {
        printf("underflow");
    }
    else
    {
        item=stack[top];
        top--;
        printf("the popped value is %d",item);
    }
}
void peak()
{
    if(top==-1)
    {
        printf("stack is empty");
    }
    else
    {
        printf("%d",stack[top]);
    }
}
 void display()
 {
     int i;
     for(i=top;i>=0;i--)
     {
         printf("%d\n",stack[i]);
     }
 }
int main()
{
    int choice;
    printf("\n\t STACK OPERATIONS USING ARRAY");
     printf("\n\t 1.PUSH\n\t 2.POP\n\t 3.DISPLAY\n\t 4.PEAK\n\t 5.EXIT");
      do
    {
        printf("\n Enter the Choice:");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:
            {
                push();
                break;
            }
            case 2:
            {
                pop();
                break;
            }
            case 3:
            {
                display();
                break;
            }
            case 4:
            {
                peak();
                break;
            }
            case 5:
            {
                printf("exit point");
                break;
            }
             default:
            {
                printf ("\n\t Please Enter a Valid Choice(1/2/3/4/5)");
            }
            }
            }

            while(choice!=5);
    return 0;
}


output:


STACK OPERATIONS USING ARRAY
         1.PUSH
         2.POP
         3.DISPLAY
         4.PEAK
         5.EXIT
 Enter the Choice:1
enter the data4

 Enter the Choice:1
enter the data6

 Enter the Choice:1
