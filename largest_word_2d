#include<stdio.h>
#include<string.h>
int main()
{
    char str[20]="my name is priyanka";
    char s[10][10],large[10];
    int i=0,j=0,count=0;
    for(int k=0;str[k]!='\0';k++){
        if(str[k]!=32 && str[k]!='\0')
        {
            s[i][j++]=str[k];
        }
        else
        {
            s[i][j]='\0';
            i++;
            j=0;
        }
    }
    s[i][j]='\0';
    strcpy(large,s[0]);
    for(int l=0;l<i+1;l++)
    {
        if(strlen(large)<strlen(s[l]))
            strcpy(large,s[l]);
    }
    printf("largest word:%s\n",large);
    printf("length is:%ld",strlen(large));
}
