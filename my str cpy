
#include <stdio.h>

void mystrcpy(char str2[])
{
    int i;
    char str1[30];
    for(i=0;str2[i]!='\0';i++)
   {
       str1[i]=str2[i];
   }
    str1[i]='\0';
    printf("The copied string is :%s",str1);
}


int main()
{
    char str[30];
    void (*fun)(char[]);
    //void (*fun)(char[])=mystrcpy;
   printf("Enter a string:\n");
    scanf("%[^\n]s",str);
  
  fun=mystrcpy;
   fun(str);
    return 0;
}
