
#include <stdio.h>
void mystrconcat(char str[],char str1[])
{
    char str2[30];
    int i,j;
    
    for(i=0;str[i]!='\0';i++)
    {
        str2[i]=str[i];
    }
    str2[i]=32;
    i=i+1;
    for(j=0;str1[j]!='\0';j++)
    {
        str2[j+i]=str1[j];
    }
    str2[j+i]='\0';
    printf("The Concat. String:%s",str2);
}

int main()
{
    char str[30]="Performing";
    char str1[30]="String Concatination";
    void (*func)(char[],char[]);

   //printf("Enter a string:\n");
   //scanf("%[^\n]s",str);
   func=mystrconcat;
   func(str,str1);
   
   
    return 0;
}
