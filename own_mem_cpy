#include<stdio.h>
char mem_cpy(char dest[],char src[],int n)
{
    if(dest==NULL)
        return 0;
    else
    {
        char *char_dest=dest;
        char *char_src=src;
        for(int i=0;i<n;i++)
        {
            char_dest[i]=char_src[i];
        }
    }
}
int main()
{
   char src[50] = "this is c program that i had wrote";
   char dest[50];
   char (*fp)(char[],char[],int);
   fp=mem_cpy;
    fp(dest, src,sizeof(char)*9);//sizeof(char)*9 only 9 characters from src will be copied into dest
    for(int i=0;i<9;i++)
   {
        printf("%c",dest[i]);
   }
   dest[10]='\0';
}
