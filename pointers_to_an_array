#include<stdio.h>
#include<string.h>

int main()
{
    char *ptr [3]={"red","blue","yellow"};
    printf("first word in a given array is: %s\n",ptr[0]);
    printf("first word in a given array is: %s\n",ptr[1]);
    printf("first word in a given array is: %s\n",ptr[2]);
    
    printf("first letter in a first word is: %s\n",ptr[0]+0);
}
