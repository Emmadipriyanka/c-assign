#include<stdio.h>
#define len 100//defining macro and its value as 100
void priya_strcpy(char []);//function declaration
int main()
{
    char s1[len];//declaring character string with length size
    printf("enter a string:");
    scanf("%[^\n]s",s1);
    priya_strcpy(s1);//calling the function
}
void priya_strcpy(char p[])
{
    char s2[len];//declaring a character string with size as len
    for(int i=0;i<len;i++)//for loop to copy characters from one string to another 
    {
        if(p[i]!='\0')//condition that p character should not be null value
        {
            s2[i]=p[i];//assigning p characters into s 2
        }
    }
    printf("copied string: %s",s2);//printing the string
}

output:

enter a string:priya hani
copied string: priya hani
