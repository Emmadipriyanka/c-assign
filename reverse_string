#include <stdio.h>
#include<string.h>
int main()
{
    char str1[]={"hanish"};
    int len=strlen(str1);
    char str2[len];
    int j=0,i=0;
    for(i=len-i-1;i>=0;i--)
    {
        str2[j]=str1[i];
        j++;
    }
    printf("reverse string %s is",str2);
    return 0;
}


output:

reverse string hsinah is





#include <stdio.h>
#include<string.h>
int main()
{
    char str1[100];
    scanf("%s",str1);
    int len=strlen(str1);
    //char str2[len];
    int i=0;
    for(i=0;i<len/2;i++)
    {
        char temp;
        temp=str1[i];
        str1[i]=str1[len-i-1];
        str1[len-i-1]=temp;
    }
    printf("reverse string %s is",str1);
    return 0;
}

output:

hanish
reverse string hsinah is
