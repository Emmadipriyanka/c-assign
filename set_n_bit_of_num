#include <stdio.h>

int main()
{
	int num;
	int n;
	printf("Enter a number: ");
	scanf("%d",&num);
	printf("enter bit to check:");
	scanf("%d",&n);
	//checking bit status
	if(num & (1<<n))
		printf("Bit number %d is SET in number %d.\n",n,num);
	else
		printf("Bit number %d is not SET in number %d.\n",n,num);
	return 0;	
}

output:

Enter a number: 5
enter bit to check:2
Bit number 2 is SET in number 5.
