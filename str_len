
#include <stdio.h>

int mystrlen(char str1[])
{
    int l=0;
     while(str1[l]!='\0')
    {
        l++;
    }
    return l;
}

int main()
{
    char str[30];
    int l1;
    
    
   printf("Enter a string:\n");
    scanf("%[^\n]s",str);
   //fgets(str,20,stdin);
    //gets(str);
   l1=mystrlen(str);
    printf("Length of the string:%d",l1);
    return 0;
}
