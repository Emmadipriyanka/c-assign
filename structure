#include<stdio.h>
struct stu//global declaration of structure definition
{
    int ro_no;
    char name[20];
    float per;
};//student; structure variable
int main()
{
    struct stu student={7,"priya",97.8};//declaring a structure variable and initialize structure values
    printf("ro.no=%d \nname=%s \nper=%.2f \n",student.ro_no,student.name,student.per);//accessing structure elements by using dot operator
    printf("size of student :%ld",sizeof(student));//print the size of structure student
}

output:

ro_no=7 
name=priya 
per=97.80 
size of student :28
