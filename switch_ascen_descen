#include<stdio.h>
#define len 10
enum cases{ONE=1,TWO};
int main()
{
    int arr[len],ch;
    printf("enter array elements:");
    for(int i=0;i<len;i++)
        scanf("%d",&arr[i]);
    printf("enter your choice:");
    scanf("%d",&ch);
    switch(ch){
        case ONE:for(int i=0;i<len;i++){
            for(int j=i+1;j<len;j++)
            {
                if(arr[i]>arr[j])
                {
                    int temp=arr[i];
                    arr[i]=arr[j];
                    arr[j]=temp;
                }
            }
        }
        printf("array of elements in ascending order:");
        for(int i=0;i<len;i++)
            printf("%d\t",arr[i]);
        break;
        case TWO:for(int i=0;i<len;i++){
            for(int j=i+1;j<len;j++)
            {
                if(arr[i]<arr[j])
                {
                    int temp=arr[i];
                    arr[i]=arr[j];
                    arr[j]=temp;
                }
            }
        }
        printf("array of elements in descending order:");
        for(int i=0;i<len;i++)
            printf("%d\t",arr[i]);
        break;
        
    }
}

output:

enter array elements:1
2
3
5
8
2
