#include <stdio.h>
int main()
{
    int n,c=0;
    printf("enter a number:");
    scanf("%d",&n);
    for(int i=0;i<32;i++)
    {
        if((n>>i)&1)
        {
            break;
        }
        c++;
    }
    printf("no.of trailing zeros is %d",c);
}

output:

enter a number:8
no.of trailing zeros is 3
